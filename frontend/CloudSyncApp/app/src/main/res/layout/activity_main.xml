<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_subtitle"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/welcomeText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/googleAccountCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/googleIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_google"
                        android:contentDescription="@string/google_drive_icon" />

                    <TextView
                        android:id="@+id/googleAccountTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/google_drive"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:id="@+id/googleStatusIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_error"
                        android:visibility="gone"
                        android:contentDescription="@string/status_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/googleAccountStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_account_selected"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="44dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectGoogleAccountButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/select_google_account"
                    android:layout_marginTop="16dp"
                    android:minHeight="48dp"
                    app:icon="@drawable/ic_account"
                    app:iconGravity="textStart"
                    style="@style/Widget.CloudSync.Button.Google" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/oneDriveAccountCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/googleAccountCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/oneDriveIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_onedrive"
                        android:contentDescription="@string/onedrive_icon" />

                    <TextView
                        android:id="@+id/oneDriveAccountTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/microsoft_onedrive"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginStart="12dp" />

                    <ImageView
                        android:id="@+id/oneDriveStatusIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_error"
                        android:visibility="gone"
                        android:contentDescription="@string/status_icon" />
                </LinearLayout>

                <TextView
                    android:id="@+id/oneDriveAccountStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/onedrive_not_connected"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="44dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/manageOneDriveButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/add_onedrive_account"
                    android:layout_marginTop="16dp"
                    android:minHeight="48dp"
                    app:icon="@drawable/ic_account"
                    app:iconGravity="textStart"
                    style="@style/Widget.CloudSync.Button.OneDrive" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/syncButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sync_data"
            android:enabled="false"
            android:minHeight="56dp"
            android:textSize="16sp"
            app:icon="@drawable/ic_sync"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/oneDriveAccountCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            style="@style/Widget.CloudSync.Button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
