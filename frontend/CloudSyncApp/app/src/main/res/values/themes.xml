<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CloudSyncApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Widget.CloudSync.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="Widget.CloudSync.Button.Google" parent="Widget.CloudSync.Button">
        <item name="backgroundTint">@color/google_blue</item>
    </style>
    
    <style name="Widget.CloudSync.Button.OneDrive" parent="Widget.CloudSync.Button">
        <item name="backgroundTint">@color/onedrive_blue</item>
    </style>
</resources>
